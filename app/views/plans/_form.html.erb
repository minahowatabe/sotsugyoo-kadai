<%= form_with(model: @plan, local: true, url: choose_new_or_edit) do |form| %>
  <% if @plan.errors.any? %>
    <div id="error_explanation">
      <h4><%= @plan.errors.count %>件のエラーがあります。</h4>
      <ul>

      <% @plan.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="plan_post">
    <%= form.label :lesson_date %>
    <%= form.date_field :date %>
  </div>
  <br>
  <div class="plan_post">
    <%= form.label :goal %>
    <%= form.text_field :string, :size=>"50*20"%>
  </div>
  <br>
  <div class="plan_post">
    <%= form.label :item %>
    <%= form.text_field :string %>
  </div>
  <br>
  <div class="plan_post">
    <%= form.label :content %>
    <%= form.text_field :content, :size=>"50*20"%>
  </div>
  <%= form.submit :class=>"btn" %>
<% end %>
<br>

<%= link_to "Back to teaching plans", plans_path, class: "btn btn-primary" %>
