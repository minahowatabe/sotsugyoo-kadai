<h1 class="lists_title container-fluid">Teaching Plan Lists</h1>

<p class = "notice"></p>

<% form_tag plans_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<!--<div class="container">-->
 <div class="table-responsive">
  <div class ="table table-bordered">
   <div class="row_A">
   <% if @user_id = current_user.id %>
     <% @plans.each do |plan| %>
       <div class="plan-panel col-md-6">
         <h2><%= plan.lessondate %></h2>
         <h2><%= plan.item %></h2>
         
       <%# if photo.user_id == current_user.id %>
       <div class="plan-links">
         <div class="row_B">
           <%= link_to 'Show', plan, class: 'btn btn-success' %>
           <%= link_to 'Edit', edit_plan_path(plan), class: 'btn btn-info' %> |
           <%= link_to 'Delete', plan, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
           <%= link_to 'Portfolio', plan, class: 'btn btn-basic' %>
         </div>
       </div>
     <% end %>
   <% end %>
  </div>
 </div>
