<br>
<h1 class="lists_title container-fluid titles">Teaching Plan</h1>

   <div class = "container">
    <table class="table">
    <tr>
      <th>LessonDate</th>
      <td><%= @plan.lessondate %></td>
    </tr>
    <tr>
      <th>Item</th>
      <td><%= simple_format(@plan.item) %></td>
    </tr>
    <tr>
      <th>Goal</th>
      <td><%= simple_format(@plan.goal) %></td>
    </tr>
    <tr>
      <th>Content</th>
      <td class = "contentfield"><%= simple_format(@plan.content) %></td>
    </tr>
  </table>
 
<div class ="linkbtn">
<%= link_to "PDFで表示",
              plan_path(@plan, format: "pdf"),
              :class => 'btn btn-warning btn-lg' %>
</div>
<br>
<div class ="linkbtn">
<%= link_to "事後コメントを残す",
              edit_plan_path,
              :class => 'btn btn-info btn-lg' %>
</div>
<br>

<%# unless @plan.user_id == current_user.id %>
<div class ="linkbtn">
  <% if @favorite.present? %>
    <%= link_to 'DELETE Portfolio', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger btn-xs' %>
  <% else %>
    <%= link_to 'ADD Portfolio', favorites_path(plan_id: @plan.id), method: :post, class: 'btn btn-basic btn-xs' %>
  <% end %>
<%# end %>
</div>
<div class ="linkbtn">
<%= link_to "Back to plan Lists", plans_path, class: "btn btn-primary" %>
</div>


